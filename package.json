{
  "name": "unified-mcp-manager",
  "version": "1.0.0",
  "description": "Centralized MCP configuration management tool for AI coding agents",
  "type": "module",
  "private": false,
  "main": "dist/cli.js",
  "bin": {
    "mcp-manager": "./dist/cli.js",
    "unified-mcp-manager": "./dist/cli.js"
  },
  "files": [
    "dist/**/*",
    "lib/**/*",
    "README.md",
    "LICENSE.md"
  ],
  "engines": {
    "node": ">=18.0.0",
    "bun": ">=1.0.0"
  },
  "scripts": {
    "dev": "bun index.ts --watch",
    "build": "bun run build-fixed.js",
    "build:complex": "bun run build.js",
    "build:vite": "vite build",
    "preview": "vite preview",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "lint": "tsc --noEmit",
    "prepublishOnly": "npm run build",
    "start": "bun dist/cli.js"
  },
  "keywords": [
    "mcp",
    "ai",
    "configuration",
    "management",
    "claude",
    "gemini",
    "cli",
    "tool",
    "ui",
    "server"
  ],
  "author": "0xRaghu",
  "license": "MIT",
  "homepage": "https://github.com/0xRaghu/unified-mcp-manager#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/0xRaghu/unified-mcp-manager.git"
  },
  "bugs": {
    "url": "https://github.com/0xRaghu/unified-mcp-manager/issues"
  },
  "dependencies": {
    "@radix-ui/react-avatar": "^1.1.10",
